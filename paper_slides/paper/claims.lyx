\begin_layout Subsubsection*

\emph on
Proof of 
\noun on
prop:comparative_statics
\end_layout

\begin_layout Standard
Fully differentiate 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:equilibrium"
plural "false"
caps "false"
noprefix "false"

\end_inset

 to get
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sum_{z\in\Z(i)}L_{iz}\frac{dh_{iz}}{dr_{i}}dr_{i}+\sum_{z\in\Z(i)}L_{iz}\frac{dh_{iz}}{dp_{i}}\frac{dp_{i}}{d\MW_{i}}d\MW_{i}+\sum_{z\in\Z(i)}L_{iz}\frac{dh_{iz}}{dy_{z}}\frac{dy_{z}}{d\MW_{z}}d\MW_{z}=\frac{dD_{i}}{dr_{i}}dr_{i}.
\]

\end_inset

Change variables using the fact that 
\begin_inset Formula $dx=xd\ln x$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sum_{z\in\Z(i)}L_{iz}\frac{dh_{iz}}{dr_{i}}r_{i}d\ln r_{i}+\sum_{z\in\Z(i)}L_{iz}\frac{dh_{iz}}{dp_{i}}\frac{dp_{i}}{d\MW_{i}}\MW_{i}d\ln\MW_{i}+\sum_{z\in\Z(i)}L_{iz}\frac{dh_{iz}}{dy_{z}}\frac{dy_{z}}{d\MW_{z}}\MW_{z}d\ln\MW_{z}=\frac{dD_{i}}{dr_{i}}r_{i}d\ln r_{i}.
\]

\end_inset

Divide by 
\begin_inset Formula $L_{i}$
\end_inset

, define 
\begin_inset Formula $\pi_{iz}=L_{iz}/L_{i}$
\end_inset

, and collect some terms
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{1}{L_{i}}\frac{dD_{i}}{dr_{i}}r_{i}-\sum_{z\in\Z(i)}\pi_{iz}\frac{dh_{iz}}{dr_{i}}r_{i}\right)d\ln r_{i}=\sum_{z\in\Z(i)}\pi_{iz}\left(\frac{dh_{iz}}{dp_{i}}\frac{dp_{i}}{d\MW_{i}}\MW_{i}d\ln\MW_{i}+\frac{dh_{iz}}{dy_{z}}\frac{dy_{z}}{d\MW_{z}}\MW_{z}d\ln\MW_{z}\right).
\]

\end_inset

Note that 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:equilibrium"
plural "false"
caps "false"
noprefix "false"

\end_inset

 can be written as 
\begin_inset Formula $\sum\pi_{iz}h_{iz}=D_{i}/L_{i}$
\end_inset

, and use this equality to divide each term
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{1}{L_{i}}\frac{dD_{i}}{dr_{i}}\frac{r_{i}}{D_{i}/L_{i}}-\sum_{z\in\Z(i)}\pi_{iz}\frac{dh_{iz}}{dr_{i}}\frac{r_{i}}{\sum\pi_{iz}h_{iz}}\right)d\ln r_{i}=\sum_{z\in\Z(i)}\pi_{iz}\left(\frac{dh_{iz}}{dp_{i}}\frac{dp_{i}}{d\MW_{i}}\frac{\MW_{i}}{\sum\pi_{iz}h_{iz}}d\ln\MW_{i}+\frac{dh_{iz}}{dy_{z}}\frac{dy_{z}}{d\MW_{z}}\frac{\MW_{z}}{\sum\pi_{iz}h_{iz}}d\ln\MW_{z}\right).
\]

\end_inset

Simplify 
\begin_inset Formula $L_{i}$
\end_inset

 on the leftmost term, and multiply and divide by 
\begin_inset Formula $p_{i}$
\end_inset

, 
\begin_inset Formula $y_{z}$
\end_inset

, 
\begin_inset Formula $\MW_{i}$
\end_inset

, and 
\begin_inset Formula $\MW_{z}$
\end_inset

 on the rhs
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{dD_{i}}{dr_{i}}\frac{r_{i}}{D_{i}}-\sum_{z\in\Z(i)}\pi_{iz}\frac{dh_{iz}}{dr_{i}}\frac{r_{i}}{\sum\pi_{iz}h_{iz}}\right)d\ln r_{i}=\sum_{z\in\Z(i)}\pi_{iz}\left(\frac{dh_{iz}}{dp_{i}}\frac{p_{i}}{\sum\pi_{iz}h_{iz}}\frac{dp_{i}}{d\MW_{i}}\frac{\MW_{i}}{p_{i}}d\ln\MW_{i}+\frac{dh_{iz}}{dy_{z}}\frac{y_{z}}{\sum\pi_{iz}h_{iz}}\frac{dy_{z}}{d\MW_{z}}\frac{\MW_{z}}{y_{z}}d\ln\MW_{z}\right).
\]

\end_inset

Define elasticities 
\begin_inset Formula $\eta_{i}=\frac{dD_{i}}{dr_{i}}\frac{r_{i}}{D_{i}}$
\end_inset

, 
\begin_inset Formula $\xi_{iz}^{x}=\frac{dh_{iz}}{dx_{i}}\frac{x_{i}}{\sum\pi_{iz}h_{iz}}$
\end_inset

 for 
\begin_inset Formula $x\in\left\{ r_{i},p_{i},y_{z}\right\} $
\end_inset

, 
\begin_inset Formula $\epsilon_{i}^{p}=\frac{dp_{i}}{d\MW_{i}}\frac{\MW_{i}}{p_{i}}$
\end_inset

, and 
\begin_inset Formula $\epsilon_{z}^{y}=\frac{dy_{z}}{d\MW_{z}}\frac{\MW_{z}}{y_{z}}$
\end_inset

 to get
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\eta_{i}-\sum_{z\in\Z(i)}\xi_{iz}^{r}\right)d\ln r_{i}=\sum_{z\in\Z(i)}\pi_{iz}\left(\xi_{iz}^{p}\epsilon_{i}^{p}d\ln\MW_{i}+\xi_{iz}^{y}\epsilon_{z}^{y}d\ln\MW_{z}\right).
\]

\end_inset

