\begin_layout Standard
The equilibrium condition in this market is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\sum_{z\in\Z(i)}L_{iz}h_{iz}\left(r_{i},p_{i}(\MW_{i}),y_{z}(\MW_{z})\right)=D_{i}(r_{i})\label{eq:equilibrium}
\end{equation}

\end_inset


